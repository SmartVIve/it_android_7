<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="popupwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/popup_hide</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="popupwindow_write_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_write_show</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/popup_write_hide</item>
        <!-- 指定消失的动画xml -->
    </style>



</resources>

